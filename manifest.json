{
     "manifest_version": 3,
     "name": "Site Modifier Extension",
     "version": "1.0",
     "description": "Modifies specific website content",
     "content_scripts": [
          {
               "matches": [
                    "*://*.example1.com/*",
                    "*://*.example2.com/*"
               ],
               "js": [
                    "content.js"
               ],
               "run_at": "document_idle"
          }
     ],
     "permissions": [
          "scripting"
     ]
}